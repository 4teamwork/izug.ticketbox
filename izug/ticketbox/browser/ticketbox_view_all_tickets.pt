<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="izug.ticketbox">

  <head>
    <metal:css fill-slot="css_slot">
      <style type="text/css" media="all"
        tal:content="string:@import url($portal_url/ticketbox.css);"></style>
    </metal:css>
  </head>


<body>
  <div metal:fill-slot="main">
    <div metal:define-macro="body">

      <h1 tal:content="here/Title" class="documentFirstHeading" />

      <div class="documentDescription" tal:content="here/Description" />

      <div class="formControls">
        <table>
          <tr>
            <td>
              <form action="createObject"
                    id="poi-submit-new-issue-form"
                    tal:condition="python: user.has_permission('Poi: Add Issue', here)">
                <input name="type_name"
                       type="hidden"
                       value="Ticket"
                       />
                <div class="formControls">
                  <input class="context"
                         type="submit"
                         i18n:attributes="value"
                         value="Submit new issue"
                         />
                </div>
              </form>
            </td>
          </tr>
        </table>
      </div>

      <h2 i18n:translate="poi_heading_open_issues">All Tickets</h2>



      <p i18n:translate="poi_help_open_issues">
          Here is a overview of all tickets in this ticketbox
      </p>


    </div>

  </div>
</body>

</html>

